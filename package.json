{
  "name": "seal",
  "private": true,
  "version": "0.2.2",
  "description": "Private messaging sealed with Nostr",
  "author": "WLANRouterKing",
  "homepage": "https://github.com/WLANRouterKing/seal",
  "type": "module",
  "main": "electron-dist/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "version": "node scripts/bump-version.js",
    "icons": "node scripts/generate-icons.js",
    "electron:compile": "tsc -p electron/tsconfig.json && tsc -p electron/tsconfig.preload.json",
    "electron:dev": "npm run electron:compile && concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "cross-env ELECTRON=true npm run build && npm run electron:compile && electron-builder",
    "electron:build:linux": "cross-env ELECTRON=true npm run build && npm run electron:compile && electron-builder --linux",
    "electron:build:win": "cross-env ELECTRON=true npm run build && npm run electron:compile && electron-builder --win"
  },
  "dependencies": {
    "@aparajita/capacitor-biometric-auth": "^9.1.2",
    "@capacitor/android": "^8.0.1",
    "@capacitor/app": "^8.0.0",
    "@capacitor/core": "^8.0.1",
    "@capacitor/ios": "^8.0.1",
    "@capacitor/local-notifications": "^8.0.0",
    "@capacitor/status-bar": "^8.0.0",
    "@capawesome-team/capacitor-android-battery-optimization": "^8.0.0",
    "@capawesome-team/capacitor-android-foreground-service": "^8.0.0",
    "@mantine/core": "^8.3.13",
    "@mantine/hooks": "^8.3.13",
    "@mantine/notifications": "^8.3.13",
    "@noble/hashes": "^1.8.0",
    "@nostrify/nostrify": "^0.48.2",
    "@tabler/icons-react": "^3.36.1",
    "electron-updater": "^6.7.3",
    "html5-qrcode": "^2.3.8",
    "i18next": "^25.7.3",
    "i18next-browser-languagedetector": "^8.2.0",
    "idb": "^8.0.3",
    "nostr-tools": "^2.19.4",
    "pako": "^2.1.0",
    "postcss-preset-mantine": "^1.18.0",
    "qrcode.react": "^4.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.5.3",
    "react-loader-spinner": "^8.0.2",
    "react-router-dom": "^7.12.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@capacitor/cli": "^8.0.1",
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^25.0.3",
    "@types/pako": "^2.0.4",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.16",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^17.1.0",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "sharp": "^0.34.5",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.52.0",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.16",
    "wait-on": "^9.0.3",
    "workbox-window": "^7.4.0"
  },
  "build": {
    "appId": "dev.seal.messenger",
    "productName": "Seal",
    "asar": false,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron-dist/**/*",
      "public/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "WLANRouterKing",
      "repo": "seal",
      "releaseType": "release"
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Network;InstantMessaging;Security",
      "icon": "public/pwa-512x512.png",
      "maintainer": "WLANRouterKing"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/pwa-512x512.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.social-networking",
      "icon": "public/pwa-512x512.png"
    }
  }}

{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Seal",
  "version": "0.1.8",
  "identifier": "dev.seal.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Seal",
        "width": 420,
        "height": 800,
        "minWidth": 360,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' wss: ws: https:; img-src 'self' data: https:; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "rpm",
      "nsis",
      "msi"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    },
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEVDOEVEMzYzRjVEMzY5NDkKUldSSmFkUDFZOU9PN1A5bkhlTzI0cVhsOERtdUhkd1lIMkhlR0k5YkFFalpxYStiU1Q1bURvY3gK",
      "endpoints": [
        "https://github.com/ArekSredzki/seal/releases/latest/download/latest.json"
      ]
    }
  }
}

# Match configuration for code signing
# See: https://docs.fastlane.tools/actions/match/

# Git repo for storing certificates and profiles
# Create a private repo for this, e.g., github.com/YourOrg/certificates
git_url(ENV["MATCH_GIT_URL"])

# Storage mode
storage_mode("git")

# App identifier
app_identifier(["com.sealchat.app"])

# Team ID
team_id(ENV["APPLE_TEAM_ID"])

# Certificate type (appstore, adhoc, development)
type("appstore")

# Username (Apple ID)
username(ENV["APPLE_ID"])

# Keychain settings for CI
keychain_name(ENV["MATCH_KEYCHAIN_NAME"] || "login.keychain")
keychain_password(ENV["MATCH_KEYCHAIN_PASSWORD"])
